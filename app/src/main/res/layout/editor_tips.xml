<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tvTextCountTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_middle"
        android:layout_marginVertical="@dimen/padding_small"
        android:gravity="start"
        android:textSize="@dimen/text_size_v4"
        android:textColor="@color/black_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivSaveState"
        tools:text="0/25000"
        />

    <ImageView
        android:id="@+id/ivSaveState"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_margin="@dimen/padding_small"
        android:src="@drawable/ic_warning"
        app:tint="@color/red_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvSaveState" />

    <TextView
        android:id="@+id/tvSaveState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_middle"
        android:layout_marginVertical="@dimen/padding_small"
        android:gravity="start"
        android:textSize="@dimen/text_size_v4"
        android:textColor="@color/red_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/not_save"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size_small"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tvTextCountTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>